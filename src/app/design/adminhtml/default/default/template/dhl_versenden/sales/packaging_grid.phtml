                        <?php continue; ?>
                    <?php endif; ?>
                    <tr title="#" id="" class="">
                        <td class="name">
                            <input name="customs_description"
                                   type="text" title="<?php echo $this->escapeHtml($this->__('Customs Description')) ?>"
